    //-   srcSet: require('~Images/image.png?sizes[]=480,sizes[]=640,sizes[]=800,sizes[]=1024,sizes[]=1450,sizes[]=1920&format=png'),
    //-   placeholder: require('~Images/image.png?prop=placeholder&placeholder=true&placeholderSize=100'),
    //- }

  picture
    source(
      srcSet=responsivePict.srcSet
      type='image/webp'
    )
    img(
      src=responsiveImage.src
      srcSet=responsiveImage.srcSet
      width=responsiveImage.width
      height=responsiveImage.height
    )

  script(src=require('~Scripts/main.js'))
