head
  link(rel="stylesheet", href=require('~Styles/styles.scss'))

body 
  header Index

  -
    const responsivePict = require('~Images/image.png?sizes[]=480,sizes[]=640,sizes[]=800,sizes[]=1024&format=webp');
    const responsiveImage = {
      srcSet: require('~Images/image.png?sizes[]=480,sizes[]=640,sizes[]=800,sizes[]=1024&format=jpg'),
      src: require('~Images/image.png?format=jpg'),
      width: require('~Images/image.png?prop=width&format=jpg'),
      height: require('~Images/image.png?prop=height&format=jpg'),
    };
